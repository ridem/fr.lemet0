<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/RelativeLayout01"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView android:text="Latitude"
              android:id="@+id/TextView01"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:layout_marginLeft="20dp"
              android:layout_marginTop="30dp"/>

    <EditText android:text="0.0"
              android:id="@+id/latitude"
              android:layout_height="wrap_content"
              android:layout_alignParentRight="true"
              android:editable="false"
              android:focusable="false"
              android:gravity="center"
              android:layout_marginRight="20dip"
              android:layout_width="150dip"
              android:layout_marginTop="30dp"/>

    <TextView android:text="Longitude"
              android:id="@+id/TextView02"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:layout_below="@+id/TextView01"
              android:layout_marginLeft="20dp"
              android:layout_marginTop="30dp"/>

    <EditText android:text="0.0"
              android:id="@+id/longitude"
              android:layout_height="wrap_content"
              android:editable="false"
              android:focusable="false"
              android:gravity="center"
              android:layout_width="150dip"
              android:layout_below="@+id/latitude"
              android:layout_alignLeft="@+id/latitude"/>


        <Button
            android:id="@+id/choix_source"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Choisir la source"
            android:layout_below="@+id/TextView02"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
            android:background="#99CC00"/>

    <Button
            android:id="@+id/obtenir_position"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Obtenir position"
            android:background="#99CC00"
            android:layout_alignTop="@+id/choix_source"
            android:layout_centerHorizontal="true"/>


    <Button
            android:id="@+id/afficherAdresse"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Afficher adresse"
            android:background="#99CC00"
            android:layout_alignTop="@+id/obtenir_position"
            android:layout_alignRight="@+id/latitude"/>



    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/adresse"
              android:layout_below="@+id/afficherAdresse"
              android:layout_centerHorizontal="true"
              android:layout_marginTop="10dip" />

    <Button
            android:id="@+id/affiche_carte"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Afficher sur la carte"
            android:layout_below="@+id/adresse"
            android:background="#99CC00"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"/>

</RelativeLayout>